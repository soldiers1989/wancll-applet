<view class='address-list'>
  <view class='item' wx:for="{{addressList}}" wx:key="key">
    <zan-panel>
      <zan-cell-group>
        <zan-cell class="top">
          <view data-id="{{item.id}}" bindtap="selectAddress">
            <view class='line'>
              <view class='name'>{{item.consignee_name}}</view>
              <view class='number'>{{item.mobile}}</view>
            </view>
            <view class='line'>{{item.address_info}}</view>
          </view>
        </zan-cell>
        <zan-cell>
          <view class='bottom'>
            <view class='default-address' data-id='{{item.id}}' catchtap='setDefaultAddress'>
              <!-- <zan-icon style="color:#358cff" type="{{item.is_default == 1 ? 'checked':'check'}}"></zan-icon> -->
              <text class="iconfont icon-roundcheckfill {{item.is_default == 1 ? 'selected' : 'no-select'}}"></text>
              <text> 默认地址</text>
            </view>
            <view class='click-button'>
              <view class='zan-button' bindtap="editAddress" data-id='{{item.id}}' size="small">
                <zan-icon type="edit"></zan-icon>
                <text> 编辑</text>
              </view>
              <view class='zan-button' bindtap="deleteAddress" data-id='{{item.id}}' size="small" type="danger">
                <zan-icon type="delete"></zan-icon>
                <text> 删除</text>
              </view>
            </view>
          </view>
        </zan-cell>
      </zan-cell-group>
    </zan-panel>
  </view>

  <view style="margin-bottom:100rpx"></view>

  <view class='add-address'>
    <zan-panel class="fix-bottom">
      <view class="button">
        <button class="hand" bindtap="editAddress" data-id='new'>
          手动添加
        </button>
        <button class="wechat" bindtap="addFromWechat" data-id='new'>
          微信添加
        </button>
      </view>
    </zan-panel>
  </view>
  <view wx:if="{{FPage.noContent}}" style="text-align: center;margin-top: 20%;">
    <image mode="widthFix" src="{{FPage.noContentImg}}" style="width: 18%;margin: 0 auto;"></image>
    <view style="color: #777;">啊哦,这里什么都没有~</view>
  </view>
</view>