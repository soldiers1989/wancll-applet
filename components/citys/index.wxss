
.citypicker{
  position: fixed;
  width: 100%;
  height: 300px
}
.citybody {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 300px;
  background-color: #fff;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  border-top:0.5rpx solid #ccc;
  border-bottom:0.5rpx solid #ccc;
  background-color: #fff;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}