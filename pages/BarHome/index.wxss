/**index.wxss**/

.packet-bg {
  background: #333;
  opacity: 0.5;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
  display: inline-block;
}

.packet {
  position: fixed;
  width: 80%;
  z-index: 100;
  left: 46%;
  transform: translate(-50%);
  top: 15%;
  display: inline-block;
}

.packet .close {
  width: 3rem;
  height: 3rem;
  position: absolute;
  top: 0;
  right: 0;
}

.search_box {
  display: flex;
  height: 80rpx;
  background: #3c9aeb;
}

.search_box .category_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.search_box .search_input {
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  margin: 15rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 5px;
  padding: 0 15rpx;
  overflow: hidden;
  display: flex;
  position: relative;
}

.search_box .search_input .icon {
  flex: 40rpx 0 0;
  font-size: 30rpx;
  color: #fff;
}

.search_box .search_input .input {
  width: auto;
  color: #fff;
  flex: 1;
}

.search_box .massage_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.banner_swiper {
  width: 100%;
  height: 432rpx;
}

.banner_swiper image {
  width: 100%;
}

.banner-list {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 0;
  text-align: center;
}

.banner-list .list {
  flex: 20%;
}

.banner-list image {
  width: 88rpx;
}

.notice {
  display: flex;
  margin: 0 15px;
  padding: 10px 0;
  background: #f4f4f4;
}

.notice .notice-img {
  flex: 120rpx 0 0;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.notice .notice-img image {
  width: 75rpx;
  height: 79rpx;
}

.notice .notice-list {
  flex: 1;
}

.notice .notice-list .list {
  widows: 100%;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #757575;
}

.scroll-items {
  white-space: nowrap;
  display: flex;
  margin-bottom: 20px;
}

.scroll-items .item {
  width: 240rpx;
  height: 240rpx;
  margin: 10rpx;
  display: inline-block;
}

.scroll-items .item .info image {
  width: 240rpx;
  height: 240rpx;
}

.scroll-items .item .info {
  text-align: center;
}

.scroll-items .item .info .discount_price {
  font-size: 14px;
  color: #df0303;
  font-weight: 600;
}

.scroll-items .item .info .sell_price {
  text-decoration: line-through;
  color: #777;
}

.links {
  display: flex;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
}

.links .link {
  padding: 10px 0;
  flex: 1;
  font-size: 18px;
  color: rgb(255, 158, 79);
}

.links .link .text {
  padding-left: 10px;
  line-height: 70px;
}

.links .link image {
  width: 70px;
  height: 70px;
  float: right;
  margin-right: 10px;
}

.wap-index {
  margin-bottom: 10px;
}

.wap-index .lists image {
  width: 100%;
}

.wap-index .scroll-items .item .info {
  text-align: left;
}

.scroll-items .item .info .name {
  color: #000;
  height: 36px;
  white-space: pre-wrap;
}

.scroll-items .item .info .price {
  font-size: 14px;
  color: #df0303;
  font-weight: 600;
}

.activity {
  height: 13rem;
  background-size: 100% 100%;
  padding: 3rem 0.5rem 0.5rem;
}

.activity .box {
  display: flex;
  margin-top: 50rpx;
}

.activity .left {
  flex: 1;
  margin-right: 0.25rem;
}

.activity .right {
  flex: 1;
}

.activity .left image {
  width: 100%;
}

.activity .right image {
  width: 100%;
}

.area image {
  width: 100%;
}

.area .name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-list .price {
  font-weight: 700;
}

.tit-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 2rem;
}
