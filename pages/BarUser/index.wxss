/* pages/User/index.wxss */

@import "../../static/wxss/iconfont2.wxss";

.panel {
  margin-bottom: 20rpx;
}

.user {
  position: relative;
  height: 405rpx;
  background-image: url('http://192.168.31.140/public/static/wap/images/home_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 80rpx;
}

.user .avatar {
  /* flex: 250rpx 0 0; */
  flex: 33% 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  border-radius: 50%;
}

.user .avatar image {
  width: 150rpx;
  height: 150rpx;
  background: #eee;
  border-radius: 50%;
}

.user .info {
  /* flex: 1; */
  flex: 56%;
  color: #fff;
  padding: 80rpx 0;
}

.user .info .icon {
  font-size: 30rpx;
}

.user .info .name {
  font-size: 36rpx;
  /* margin-bottom: 15rpx; */
}

.user .info .phone {
  line-height: 50rpx;
}

.user .info .other {
  display: flex;
}

.user .info .other .vip {
  margin-right: 50rpx;
}

.user .sign {
  color: #fff;
  flex: 10%;
  padding: 80rpx 0;
  line-height: 200rpx;
}

.user .sign view {
  text-align: center;
  font-size: 0.5rem;
  border: 1px solid rgba(255, 255, 255, 0.5);
  border-radius: 1rem;
  height: 1rem;
  line-height: 1rem;
  vertical-align: middle;
}

.user .setting {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.user .setting .icon {
  font-size: 45rpx;
  color: #fff;
}

.money {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 18.75rpx;
  margin: 85.5rpx 18.75rpx 18.75rpx 18.75rpx;
  flex: 1;
}

.money-item {
  margin: 18.75rpx 0;
  text-align: center;
  flex: auto;
}

.money .money-item:nth-of-type(1) {
  border-right: 1rpx solid #ccc;
}

.money-item view:last-of-type {
  width: 40%;
  background: #ec4565;
  text-align: center;
  margin: 0 auto;
  font-size: 22.5rpx;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 11.25rpx;
  border-radius: 45rpx;
  color: #fff;
}

.open-member {
  display: flex;
  border-radius: 18.75rpx;
  justify-content: space-between;
  background-color: #fff;
  align-items: center;
  margin: 18.75rpx;
  padding: 15rpx;
  font-size: 26.25rpx;
}

.open-member view:last-of-type {
  background: linear-gradient(to right, #dec04c, #e0a837, #e59523);
  border-radius: 45rpx;
  color: #fff;
  padding: 18.75rpx;
}

.pending-list {
  padding: 20px 0 15px 0;
  display: flex;
}

.pending-list .pending {
  flex: 25% 0 0;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending-order {
  flex: 1;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending .icon-badge {
  margin: 0rpx 40rpx;
}

.pending-list .pending .icon {
  font-size: 50rpx;
}

.pending-list .pending .color-y {
  color: rgb(235, 197, 46);
}

.pending-list .pending .color-r {
  color: rgb(236, 128, 62);
}

.pending-list .pending .text {
  font-size: 24rpx;
  line-height: 60rpx;
}
