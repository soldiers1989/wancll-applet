.popup-nav{
  display: flex;
  width: 100%;
  padding-bottom:20rpx; 
  padding-top:20rpx; 
  background: #fff;
}
.popup-nav .list{
  margin: 0 0 0 10px;
  text-align: center;
}
.popup-nav .list .image{
  width: 100%;
  height: 100rpx;
  text-align: center
}
.popup-nav .list .image image{
  width: 100rpx;
  height: 100rpx;
}

.zan-tab__item--selected .zan-tab__title{
  color: #358cff !important;
}

.price{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
}

.market-price {
  text-decoration: line-through;
  color:#777;
  padding: 20rpx;
  flex:40%;
  text-align: right;
}

.wancll-text-price {
  font-weight: 700;
  flex:1;
  font-size: 17px;
}

.tit-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 1.9rem;
}