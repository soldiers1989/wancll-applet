.pop-example__container {
  overflow: hidden;
  background: #f6f6f6;
}

.pop-example__container--bottom {
  width: 100vw;
}

.pop-example__container--left, .pop-example__container--right {
  height: 100vh;
}

.order-address {
  margin-bottom: 10px;
}

.item-list {
  margin-bottom: 10px;
}

.top-close {
  font-size: 28rpx;
  padding: 10px;
}

.top-close .icon {
  font-size: 28rpx;
  float: right;
}

.item-content {
  padding: 10px;
  background: #fff;
}

.center-info {
  background: #fafafa;
  padding: 10rpx;
  display: flex;
  margin-bottom: 10rpx;
}

.center-info .image-warpper {
  flex: 180rpx 0 0;
}

.center-info .image {
  width: 160rpx;
  height: 160rpx;
  background: #ccc;
  display: block;
}

.center-info .title-warpper {
  flex: 1;
}

.center-info .title-warpper .price-warpper {
  display: flex;
}

.center-info .title-warpper .price-warpper .price {
  flex: 1;
  font-size: 0.7rem;
  color: #df0303;
  font-weight: 700;
}

.center-info .title-warpper .price-warpper .count {
  flex: 1;
  justify-content: flex-end;
}

.other-price {
  display: block;
  background: #fff;
}

.other-price .panel {
  padding: 10px;
}

.other-price .panel .discont {
  float: right;
}

.total-box {
  background: #fff;
  text-align: right;
  margin-bottom: 10px;
}

.total-box .total {
  font-size: 20px;
  padding: 10px;
}

.memo {
  padding: 10px;
}

.memo .title {
  color: #777;
  font-size: 0.75rem;
  height: 2rem;
  line-height: 2rem;
}

.memo .content {
  border: 1px solid rgb(247, 247, 247);
  width: 100%;
  font-size: 0.8rem;
  color: #424242;
  height: 5rem;
}

.other-price  .user-info {
  padding: 10px;
}

.other-price  .user-info .title {
  color: #f00;
  font-size: 0.75rem;
  height: 2rem;
  line-height: 2rem;
}

.other-price .user-info input {
  height: 2.2rem;
  color: #424242;
  font-size: 0.8rem;
}

.bottom {
  height: 2.9rem;
  border-top: 1px solid #f4f4f4;
  overflow: hidden;
  position: fixed;
  top: auto;
  bottom: 0;
  table-layout: fixed;
  background-color: #fff;
  color: #757575;
  width: 100%;
  display: flex;
  z-index: 999;
}

.bottom .total {
  width: 75%;
  text-align: right;
  display: inline-block;
  line-height: 2.9rem;
  padding-right: 0.5rem;
  font-size: 0.9rem;
  height: 2.9rem;
  color: #fff;
  background-color: rgb(160, 160, 160);
}

.bottom .submit {
  flex: 1;
  text-align: center;
  line-height: 2.9rem;
  color: #fff;
  font-size: 0.9rem;
  background: linear-gradient(to bottom, #fc5458, #f4334b, #ee5176);
}

.address {
  font-size: 0.8rem;
  color: #212121;
}

.user-info {
  font-size: 0.7rem;
  color: #757575;
}
