.status {
  margin: 100rpx 0 100rpx 0;
}

.pay-success {
  font-size: 70rpx;
  color: #21c002;
}

.go-home {
  color: #fff;
  background: red;
  margin-bottom: 20rpx;
  border-radius: 3rem;
  font-size: 16px;
}

.order {
  border-radius: 3rem;
  border: 1px solid #000;
  font-size: 16px;
}

.bg {
  height: 100%;
  width: 100%;
  background-color: #000;
  opacity: 0.7;
  position: fixed;
  top: 0;
  z-index: 99;
}

.share {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 100;
}

.share .img1 {
  margin: 15px 0px 0px 84%;
  width: 10%;
  position: absolute;
  right: 160rpx;
}

.share .img2 {
  position: absolute;
  top: 200rpx;
  left: 240rpx;
  width: 40%;
}

.share .img3 {
  position: absolute;
  top: 300rpx;
