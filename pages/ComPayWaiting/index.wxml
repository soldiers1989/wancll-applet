<view>
  <view class="bg" wx:if="{{isShowShare}}"></view>
  <view class="share" wx:if="{{isShowShare}}">
    <image mode="widthFix" class="img1" src="https://www.aimaiyoupin.com/public/static/wap/images/pay_jiantou.png"></image>
    <image mode="widthFix" class="img2" src="https://www.aimaiyoupin.com/public/static/wap/images/pay-text-1.png"></image>
    <image mode="widthFix" class="img3" src="https://www.aimaiyoupin.com/public/static/wap/images/pay-text-2.png"></image>
    <image mode="widthFix" class="img4" src="https://www.aimaiyoupin.com/public/static/wap/images/pay-text-btn.png" bindtap="closePacket"></image>
  </view>

  <view class="status  wancll-text-center">
    <view class='loading' wx:if="{{!isPay}}">
      <zan-loading class="loading-icon" type="spinner" color="black"></zan-loading>
      <view style="font-size:0.9rem" class="wancll-margin-20">支付处理中</view>
    </view>
    <view wx:if="{{isPay}}">
      <i style="font-size:3rem" class="iconfont icon-roundcheckfill pay-success"></i>
      <view style="font-size:0.9rem" class="wancll-margin-20">支付成功</view>
    </view>
  </view>

  <view class="wancll-margin-10">
    <button class="go-home" bindtap="goHome">返回首页</button>
    <button class="order wancll-text-black" bindtap='goOtherPage' wx:if="{{payType == 'goodsOrderPay'}}">查看我的订单</button>
    <button class="order wancll-text-black" bindtap='goOtherPage' wx:if="{{payType == 'rechargeOrderPay'}}">查看我的钱包</button>
    <button class="order wancll-text-black" bindtap='goOtherPage' wx:if="{{payType == 'buyMember'}}">查看个人中心</button>
  </view>
</view>