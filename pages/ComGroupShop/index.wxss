@import "../../static/wxss/iconfont2.wxss";

.panel {
  margin-bottom: 20rpx;
}

.banner_swiper {
  width: 100%;
  height: 432rpx;
}

.banner_swiper image {
  width: 100%;
}

.banner-list {
  display: flex;
  padding: 30rpx 0;
  text-align: center;
}

.banner-list .list {
  flex: 1;
}

.banner-list image {
  width: 88rpx;
}

.pending-list {
  padding: 20px 0 15px 0;
  display: flex;
}

.pending-list .pending {
  flex: 25% 0 0;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending-order {
  flex: 1;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending .icon-badge {
  margin: 0rpx 40rpx;
}

.pending-list .pending .icon {
  font-size: 50rpx;
}

.pending-list .pending .color-y {
  color: rgb(235, 197, 46);
}

.pending-list .pending .color-r {
  color: rgb(236, 128, 62);
}

.pending-list .pending .text {
  font-size: 24rpx;
  line-height: 60rpx;
}
