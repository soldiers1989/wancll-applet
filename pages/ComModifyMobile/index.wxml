<view class="container">
  <view class='logo-box'>
    <image src="{{logo}}" mode="widthFix" class="wancll-col-xs-7 logo"></image>
  </view>

  <view class='panle'>
    <input bindinput='bindMobile' placeholder='请输入新手机号码'></input>
    <view class='right'>
      <block wx:if="{{status}}">
        <button class="wancll-text-white" style="background-color:#ff0000" bindtap="sendCode">发送验证码</button>
      </block>
      <block wx:else="{{status}}">
        <button style="background-color: rgb(105, 105, 105)">{{countDown}} 再次发送</button>
      </block>
    </view>
  </view>
  <view class='panle'>
    <input bindinput="bindCode" placeholder="输入验证码" class="" />
  </view>
  <view class="form wancll-margin-l-10 wancll-margin-r-10">
    <button class="wancll-text-white button" bindtap="sendData">修改手机号</button>
  </view>
</view>