.panel {
  margin-bottom: 20rpx;
}

.user {
  position: relative;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  flex-wrap: wrap;
  height: 7rem;
  border-radius: 0.3rem;
}

.user .setting{
  position: absolute;
  right: 30rpx;
  top:30rpx;
  font-size: 30rpx;
  color: #fff;
}

.user .avatar {
  flex: 33% 0 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  border-radius: 50%;
}

.user .avatar image {
  width: 150rpx;
  height: 150rpx;
  background: #eee;
  border-radius: 50%;
}

.user .info {
  flex: 56%;
  color: #fff;
  padding: 60rpx 0;
}

.user .info .icon {
  font-size: 30rpx;
}

.user .info .name {
  font-size: 36rpx;
  /* margin-bottom: 15rpx; */
}

.user .info .phone {
  line-height: 50rpx;
}

.user .info .other {
  display: flex;
}

.user .info .other .vip {
  margin-right: 50rpx;
}

.user .sign {
  color: #fff;
  flex: 10%;
  padding: 80rpx 0;
  /* line-height: 200rpx; */
}

.user .sign .real-sign {
  text-align: center;
  font-size: 0.5rem;
  border: 1px solid rgba(255, 255, 255, 0.5);
  border-radius: 1rem;
  height: 1rem;
  line-height: 1rem;
  vertical-align: middle;
}

.user .sign .detail{
  margin-top:20rpx;
}

.user .detail {
  font-size: 36rpx;
  color: #fff;
}

.pending-list {
  padding: 20px 0 15px 0;
  display: flex;
}

.pending-list .pending {
  flex: 25% 0 0;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending-order {
  flex: 1;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending .icon-badge {
  margin: 0rpx 40rpx;
}

.pending-list .pending .icon {
  font-size: 50rpx;
}

.pending-list .pending .color-y {
  color: rgb(235, 197, 46);
}

.pending-list .pending .color-r {
  color: rgb(236, 128, 62);
}

.pending-list .pending .text {
  font-size: 24rpx;
  line-height: 60rpx;
}

.tit-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height:2rem;
}
