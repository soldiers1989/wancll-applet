@import "../../static/wxss/iconfont3.wxss";

.search_box {
  display: flex;
  height: 80rpx;
  background: #fff;
}

.search_box .category_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.search_box .search_input {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  margin: 15rpx;
  background: #fafafa;
  border-radius: 5px;
  padding: 0 15rpx;
  overflow: hidden;
  display: flex;
  position: relative;
  font-size: 26rpx;
}

.search_box .search_input .icon {
  flex: 40rpx 0 0;
  font-size: 30rpx;
  color: #666;
  line-height: 70rpx;
}

.search_box .search_input .input {
  width: auto;
  color: #666;
  flex: 1;
}

.search_box .massage_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.ad image {
  width: 100%;
}

.goods-list .info .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
