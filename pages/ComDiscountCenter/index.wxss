.box{
  background-color: #fff;
}
.banner_swiper {
  width: 100%;
  height: 432rpx;
}

.banner_swiper image {
  width: 100%;
}

.banner-list {
  display: flex;
  padding: 30rpx 0;
  text-align: center;
}

.banner-list .list {
  flex: 1;
}

.banner-list image {
  width: 88rpx;
}

.title {
  /* background: linear-gradient(to bottom, #9c4c20, #eaac81);
  color: transparent; */
  font-size: 0.6rem;
}

.title .image {
  width: 70%;
  margin: 0 auto;
}

.title .image image {
  max-width: 100%;
}

.title .time {
  margin-top: 20rpx;
  text-align: center;
}


.scroll-items {
  white-space: nowrap;
  display: flex;
  margin-bottom: 20px;
}

.scroll-items .item {
  width: 240rpx;
  height: 240rpx;
  margin: 10rpx;
  display: inline-block;
}

.scroll-items .item .info image {
  width: 240rpx;
  height: 240rpx;
}

.discount_price {
  font-size: 0.8rem;
  color: #df0303;
  font-weight: 600;
}

.sell_price {
  text-decoration: line-through;
  color: #aeaeae;
  font-size: 0.6rem;
}

.scroll-items .item .info {
  position: relative;
}

.scroll-items .item .info .name {
  font-size: 0.6rem;
  color: #333;
  white-space: pre-wrap;
  height: 1.8rem;
}

.scroll-items .item .info .logo {
  position: absolute;
  left: 0;
  top: 0;
  background-color: #fb361c;
  padding: 0 0.2rem;
  color: #fff;
  line-height: 0.8rem;
  display: inline-block;
  font-size: 0.4rem;
  border-top-right-radius: 1rem;
  border-bottom-right-radius: 1rem;
}

.bottom .title {
  
  font-size: 0.6rem;
  color: #333;
  line-height: 1.5rem;
  height: 1.5rem;
  padding: 0 1rem;
  margin: 1rem 0 1px;
}

.bottom .list .item {
  padding: 0.5rem;
  border-top: 1rpx solid #f4f4f4;
  display: flex;
}

.bottom .list .item .left {
  flex: 1;
}

.bottom .list .item .left image {
  width: 100%;
}

.bottom .list .item .right {
  flex: 3;
  padding-left: 0.5rem;
}

.bottom .list .item .title {
  font-size: 0.6rem;
}

.bottom .list .item .right .button {
  display: inline-block;
  background-color: #e51c23;
  color: #fff;
  padding: 0 0.6rem;
  height: 1.5rem;
  line-height: 1.5rem;
  border-radius: 0.2rem;
  font-size: 0.7rem;
}
