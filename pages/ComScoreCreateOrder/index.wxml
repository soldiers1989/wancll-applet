      <view class='popup-warpper'>
        <zan-panel>
          <view class='title'>请输入支付密码</view>
        </zan-panel>
        <input bindinput='liscenInput' data-type="password" type='password' value="{{password}}"></input>
        <view class='select'>
          <zan-button class='yes' catchtap='confirmPassword'> 确定 </zan-button>
