<view class="order-address" bindtap="toggilPopupAddress">
  <zan-panel>
    <block wx:if="{{selectedAddress.id}}">
      <view class="wancll-flex wancll-bg-white wancll-margin-t-10 wancll-margin-b-10 wancll-font-size-14">
        <i class="iconfont icon-dizhi1 wancll-font-size-20 wancll-padded-10 ylyy-red"></i>
        <view class="wancll-padded-t-10 wancll-padded-r-10 wancll-padded-b-10" style="width:100%">
          <view class="wancll-font-weight address"> {{selectedAddress.province}} {{selectedAddress.city}} {{selectedAddress.area}} {{selectedAddress.address}}</view>
          <view class="clearfix wancll-margin-t-10 user-info">
            <text>{{selectedAddress.consignee_name}}</text>
            <text class="wancll-fr">{{selectedAddress.mobile}}</text>
          </view>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class=" wancll-margin-t-10 wancll-margin-b-10  wancll-padded-15 wancll-bg-white">请先添加收货地址</view>
    </block>
  </zan-panel>
</view>
<view class="item-list">
  <zan-panel>
    <view class='item-content' wx:for="{{goodsList}}" wx:key="key">
      <view class='center-info'>
        <view class='image-warpper'>
          <image class='image' src='{{item.goods_info.thum}}' mode="widthFix"></image>
        </view>
        <view class='title-warpper'>
          <view class='title wancll-margin-b-5 wancll-order-goods-name '>{{item.goods_info.name}}</view>
          <view class='wancll-text-pray wancll-order-goods-intro wancll-margin-b-5 wancll-ellipsis-2'>{{item.goods_info.intro}}</view>
          <view class='wancll-text-pray wancll-order-goods-intro wancll-margin-b-5' wx:if="{{item.select_spec_group_info.id}}">规格: {{item.select_spec_group_info.spec_option_group}}
          </view>
          <view class='price-warpper'>
            <view class='price wancll-text-price ' style="{{isDiscountGoods?'text-decoration: line-through':''}}">
              <text class="wancll-order-price-icon">￥</text>{{item.select_spec_group_info.sell_price?item.select_spec_group_info.sell_price*item.num:item.goods_info.sell_price*item.num}}
            </view>
            <view class='count wancll-flex'>
              <i class="iconfont icon-jian wancll-font-size-18 ylyy-red" data-index="{{index}}" bindtap="changeNum" data-type="minus"></i>
              <text class="wancll-padded-5 ylyy-red"> {{item.num}} </text>
              <i class="iconfont icon-jia wancll-font-size-18 ylyy-red" data-index="{{index}}" bindtap="changeNum" data-type="plus"></i>
            </view>
          </view>
        </view>
      </view>
    </view>
  </zan-panel>
</view>
<view class='other-price'>
  <zan-panel wx:if="{{isDiscountGoods}}">
    <view class='panel'>
      <text class='title'>限时折扣单价</text>
      <text class='discont wancll-text-price wancll-font-size-16'><text class="wancll-font-size-10">￥</text>{{activities.discount[0].discount_price}}</text>
    </view>
  </zan-panel>
  <zan-panel wx:if="{{activities.full.length && !isDiscountGoods}}">
    <view class='panel' bindtap="toggilPopupFull">
      <text class='title'>选择减满优惠</text>
      <text class='discont'>{{selectedActivityType == 'full' ? selectedActivityText : ''}}</text>
    </view>
  </zan-panel>
  <view wx:if="{{activities.coupon.length && !isDiscountGoods}}" class='panel' bindtap="toggilPopupCoupon">
    <text class='title'>选择优惠券</text>
    <text class='discont'>{{selectedActivityType == 'coupon' ? selectedActivityText : ''}}</text>
  </view>
  <zan-panel>
    <view class='panel'>
      <text class='title'>运费</text>
      <text class='discont'>
      <text class="wancll-font-size-10">￥</text>{{freightMoney}}
      </text>
    </view>
  </zan-panel>
  <zan-panel>
    <view class='panel' wx:if="{{isMember}}">
      <text class='title'>金卡会员享</text>
      <text class='discont'>
      <text>折扣 {{memberParams.user.discount}}</text>
      </text>
    </view>
  </zan-panel>
  <!-- 身份信息 -->
  <zan-panel wx:if="{{hasForeignGoods}}">
    <view class="user-info">
      <view class="title">根据海关要求，购买跨境商品必须提供实名认证:</view>
      <input type="text" placeholder="请输入姓名" value="{{user.name}}" bindinput="liscenInput" data-type="name"></input>
      <input type="text" placeholder="请输入身份证号码" value="{{user.id_card}}" bindinput="liscenInput" data-type="idcard"></input>
    </view>
  </zan-panel>
  <zan-panel>
    <view class='memo' wx:if="{{hasPopup}}">
      <text class='title'>买家留言</text>
      <textarea class="content" bindinput="liscenInput" data-type="memo" placeholder="选填"></textarea>
    </view>
  </zan-panel>
</view>

