}
.selects-subpage .subpage .other{
  color: #777
}
.selects-subpage .subpage .icon {
  font-size: 28px;
}

.selects-subpage .subpage .icon-r {
  color: rgb(254, 147, 65);
}

.selects-subpage .subpage .icon-b {
  color: rgb(37, 127, 214);
