.panel {
  margin-bottom: 20rpx;
}

.not-member {
  position: relative;
  background-image: url('https://www.aimaiyoupin.com/public/static/wap/images/v-bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  height: 10rem;
  color: #fff;
  text-align: center;
  font-size: 18px;
}

.not-member .title2 {
  padding-top: 1.8rem;
  font-weight: 500;
  color: #fff;
}

.not-member .title2 .v {
  display: inline-block;
  width: 1.6rem;
  transform: translateY(20%);
}

.not-member .open-now {
  background-color: #fff;
  padding: 0.15rem 0.8rem;
  width: 6rem;
  margin: 1rem auto;
  border-radius: 3rem;
  color: #c59343;
}

.user {
  position: relative;
  background-image: url('https://www.aimaiyoupin.com/public/static/wap/images/v-bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding: 2rem 0.5rem 2rem 1.3rem;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  height: 180rpx;
}

.user .logo {
  position: absolute;
  width: 4rem;
  top: 0.4rem;
  left: 0.4rem;
}

.user .avatar {
  width: 3rem;
  vertical-align: center;
}

.user .avatar image {
  /* width: 100%; */
  width: 120rpx;
  height: 120rpx;
  background: #eee;
  border-radius: 50%;
}

.user .info {
  flex: 2 0 auto;
  /* flex: 56%; */
  color: #fff;
  padding-left: 50rpx;
}

.user .info .icon {
  font-size: 30rpx;
}

.user .info .name {
  font-size: 36rpx;
  margin-bottom: 0.5rem;
}

.user .v {
  display: inline-block;
  width: 1.2rem;
  transform: translateY(20%);
}

.user .sign {
  color: #fff;
  flex: 1 0 auto;
}

.user .sign .real-sign {
  margin-bottom: 0.5rem;
  text-align: center;
  font-size: 0.5rem;
  background: #fff;
  border-radius: 0.2rem;
  height: 1rem;
  line-height: 1rem;
  vertical-align: middle;
  color: #c59343;
}

.user .detail {
  font-size: 36rpx;
  color: #fff;
}

.title {
  text-align: center;
  color: #f00;
  font-size: 32rpx;
  margin: 0.5rem;
  font-style: normal;
}

.pending-list {
  padding: 20px 0 15px 0;
  display: flex;
}

.pending-list .pending {
  flex: 25% 0 0;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending-order {
  flex: 1;
  flex-wrap: wrap;
  text-align: center;
}

.pending-list .pending .icon-badge {
  margin: 0rpx 40rpx;
}

.pending-list .pending .icon {
  font-size: 50rpx;
}

.pending-list .pending .color-y {
  color: rgb(235, 197, 46);
}

.pending-list .pending .color-r {
  color: rgb(236, 128, 62);
}

.pending-list .pending .text {
  font-size: 24rpx;
  line-height: 60rpx;
}

.goods-list .info .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
