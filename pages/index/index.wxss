/**index.wxss**/

.search_box {
  display: flex;
  height: 80rpx;
  background: #3c9aeb;
}

.search_box .category_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.search_box .search_input {
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  margin: 15rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 5px;
  padding: 0 15rpx;
  overflow: hidden;
  display: flex;
  position: relative;
}

.search_box .search_input .icon {
  flex: 40rpx 0 0;
  font-size: 30rpx;
  color: #fff;
}

.search_box .search_input .input {
  width: auto;
  color: #fff;
  flex: 1;
}

.search_box .massage_button {
  flex: 80rpx 0 0;
  text-align: center;
}

.banner_swiper {
  width: 100%;
  height: 432rpx;
}

.banner_swiper image {
  width: 100%;
}

.banner-list {
  display: flex;
  padding: 30rpx 0;
  text-align: center;
}

.banner-list .list {
  flex: 1;
}

.banner-list image {
  width: 88rpx;
}

.notice {
  display: flex;
  margin: 0 15px;
  padding: 10px 0;
  background: #f4f4f4;
}

.notice .notice-img {
  flex: 120rpx 0 0;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.notice .notice-img image {
  width: 75rpx;
  height: 79rpx;
}

.notice .notice-list {
  flex: 1;
}

.notice .notice-list .list {
  widows: 100%;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #757575;
}

.scroll-items {
  white-space: nowrap;
  display: flex;
  margin-bottom: 20px;
}

.scroll-items .item {
  width: 240rpx;
  height: 240rpx;
  margin: 10rpx;
  display: inline-block;
}
.scroll-items .item .info image{
  width: 240rpx;
  height: 240rpx;
}
.scroll-items .item .info {
  text-align: center;
}
.scroll-items .item .info .discount_price {
  font-size: 14px;
  color: #df0303;
}
.scroll-items .item .info .sell_price {
  text-decoration: line-through;
  color:#777;
}
.links{
  display: flex;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
}
.links .link{
  padding: 10px 0;
  flex: 1;
  font-size: 18px;
  color: rgb(255, 158, 79);
}
.links .link .text{
  padding-left: 10px;
  line-height: 70px;
}
.links .link image{
  width: 70px;
  height: 70px;
  float: right;
  margin-right: 10px;
}